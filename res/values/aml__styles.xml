<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Medes" />

    <style name="Medes.Widget" />

    <style name="Medes.Widget.QuickAction" />

    <style name="Medes.Widget.QuickAction.Bar" />

    <style name="Medes.Widget.QuickAction.Grid">
        <item name="android:padding">7dp</item>
        <item name="android:listSelector">@drawable/aml__quick_action_grid_selector</item>
        <item name="android:background">@drawable/aml__quick_action_grid_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">7dp</item>
        <item name="android:numColumns">3</item>
    </style>

    <style name="Medes.Widget.QuickAction.Item">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="Medes.Widget.QuickAction.Bar.Item" parent="@style/Medes.Widget.QuickAction.Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:background">@drawable/aml__quick_action_bar_item</item>
    </style>

    <style name="Medes.Widget.QuickAction.Grid.Item" parent="@style/Medes.Widget.QuickAction.Item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="Medes.Animation" />

    <!-- PopDownMenu -->
    <style name="Medes.Animation.PopUp" />

    <style name="Medes.Animation.PopDown" />

    <style name="Medes.Animation.PopDown.Left">
        <item name="@android:windowEnterAnimation">@anim/aml__grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/aml__shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Medes.Animation.PopDown.Right">
        <item name="@android:windowEnterAnimation">@anim/aml__grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/aml__shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Medes.Animation.PopDown.Center">
        <item name="@android:windowEnterAnimation">@anim/aml__grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/aml__shrink_from_bottom</item>
    </style>

    <style name="Medes.Animation.PopUp.Left">
        <item name="@android:windowEnterAnimation">@anim/aml__grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/aml__shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Medes.Animation.PopUp.Right">
        <item name="@android:windowEnterAnimation">@anim/aml__grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/aml__shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Medes.Animation.PopUp.Center">
        <item name="@android:windowEnterAnimation">@anim/aml__grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/aml__shrink_from_top</item>
    </style>

</resources>